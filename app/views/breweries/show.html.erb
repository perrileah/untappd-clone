<h1><%=@brewery.name%></h1>

<p><strong>Beers: </strong></p>
<% @brewery.beer.each do |beer| %>
  <p><a href="/beers/<%= beer.id %>"> <%= beer.name %> </a> </p>
  <% end %>

<p><strong>Address: </strong><%= @brewery.address %></p>
<p><strong>Website: </strong><%= @brewery.website %></p>
<p><strong>Logo: </strong><%= @brewery.logo %></p>

<p><%= link_to "All Breweries", breweries_path %></p>
<p><%= link_to "All Beers", beers_path %></p>

